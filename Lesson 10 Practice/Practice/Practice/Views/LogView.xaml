<UserControl
    x:Class="Practice.Views.LogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Practice.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:LogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding List}">
            <!--  列的头部标题居中  -->
            <!--<DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>-->
            <DataGrid.Columns>
                <DataGridTextColumn
                    MaxWidth="220"
                    Binding="{Binding Title}"
                    CanUserSort="False"
                    Header="Title"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Index}"
                    Header="Index" />
                <DataGridTextColumn
                    MaxWidth="220"
                    Binding="{Binding Icon}"
                    Header="Icon" />
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0" Orientation="Horizontal">
                                <Button
                                    Height="22"
                                    Margin="0"
                                    Padding="2"
                                    Style="{StaticResource MaterialDesignFlatButton}">
                                    <TextBlock FontSize="13" Text="Detail" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
