<UserControl
    x:Class="Practice.Views.LogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Practice.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:LogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding List}">
            <!--  列的头部标题居中  -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <!--  列的文本居中  -->
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn
                    MaxWidth="220"
                    Binding="{Binding Title}"
                    CanUserSort="False"
                    Header="Title"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Index}"
                    Header="Index" />
                <DataGridTextColumn
                    MaxWidth="220"
                    Binding="{Binding Icon}"
                    Header="Icon" />
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Content="Edit"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="MaterialDesignFlatButton" />
                                <Button
                                    Content="Edit"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="MaterialDesignFlatButton" />
                                <Button
                                    Content="Edit"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="MaterialDesignFlatButton" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
