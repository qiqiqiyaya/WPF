<Window
    x:Class="Practice.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="650"
    AllowsTransparency="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Background="{DynamicResource MaterialDesignPaper}"  -->
            <Grid
                x:Name="NavRail"
                Width="{Binding NavRailWidth}"
                Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button
                    Grid.Row="0"
                    Width="56"
                    Height="56"
                    Margin="0,5,0,25"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignFlatLightButton}">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="Home" />
                </Button>

                <ScrollViewer
                    x:Name="MenuViewer"
                    Grid.Row="1"
                    Style="{StaticResource ForScrollViewer}">

                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                        <Button
                            Width="auto"
                            Height="350"
                            Content="{materialDesign:PackIcon Kind=ArrowLeft,
                                                              Size=24}"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button
                            Height="350"
                            Margin="0,0,0,0"
                            Content="{materialDesign:PackIcon Kind=ArrowLeft,
                                                              Size=24}"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                    </StackPanel>
                </ScrollViewer>
                <!--<Viewbox
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    Stretch="Uniform">
                    <ListBox
                        VerticalAlignment="Top"
                        ItemsSource="{Binding MainDemoItems}"
                        SelectedValue="{Binding SelectedItem}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="materialDesign:BadgedAssist.Badge" Value="{Binding Notifications}" />
                                <Setter Property="materialDesign:BadgedAssist.BadgeBackground" Value="#930006" />
                                <Setter Property="materialDesign:BadgedAssist.BadgeForeground" Value="#FFDAD4" />
                                <Setter Property="materialDesign:NavigationRailAssist.IsTextVisible" Value="True" />
                                <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon" Value="{Binding SelectedIcon}" />
                                <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon" Value="{Binding UnselectedIcon}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.Resources />
                    </ListBox>
                </Viewbox>-->
            </Grid>

        </Grid>

        <materialDesign:ColorZone
            x:Name="Header"
            Grid.Column="1"
            Padding="16"
            materialDesign:ElevationAssist.Elevation="Dp0"
            DockPanel.Dock="Top"
            Mode="Standard">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <!--
                    Content="{materialDesign:PackIcon Kind=MenuClose,
                    Size=24}"
                -->
                <!--  Command="{Binding MenuAction}"  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button
                        x:Name="MenuClose"
                        Margin="0,0,0,0"
                        Command="{Binding MenuAction}"
                        CommandParameter="{Binding ElementName=PackIcon, Path=Kind}"
                        Content="{DynamicResource PackIcon}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.Resources>
                            <materialDesign:PackIcon x:Key="Icon" x:Name="PackIcon" />
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AutomationProperties.Name="Material Design In XAML Toolkit"
                    FontSize="22"
                    Text="To Do List" />

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Image
                        Width="35"
                        Height="35"
                        Source="Resources/201962717351564989.jpeg">
                        <!--  图片裁剪  -->
                        <Image.Clip>
                            <EllipseGeometry
                                Center="17.5,17.5"
                                RadiusX="18"
                                RadiusY="18" />
                        </Image.Clip>
                    </Image>
                    <Button
                        x:Name="Minimized"
                        Margin="2.5,0"
                        Click="Minimized_OnClick"
                        Content="—"
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        ToolTip="MaterialDesignFlatButton" />
                    <Button
                        x:Name="Maximized"
                        Margin="2.5,0"
                        Click="Maximized_OnClick"
                        Content="☐"
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        ToolTip="MaterialDesignFlatButton" />
                    <Button
                        x:Name="Close"
                        Margin="2.5,0"
                        Click="Close_OnClick"
                        Content="✕"
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        ToolTip="MaterialDesignFlatButton" />
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

    </Grid>
</Window>
