<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DefaultFontFamily" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/#MiSans Normal" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style BasedOn="{StaticResource DefaultFontFamily}" TargetType="TextBlock" />
</ResourceDictionary>