<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <SolidColorBrush x:Key="PrimaryHueLightBrush100" Color="{DynamicResource Primary100}" />

    <Style x:Key="BlockquoteBorder" TargetType="Border">
        <Setter Property="Padding" Value="10,8,10,8" />
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="BorderThickness" Value="5,0,0,0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    po:Freeze="True"
                    BlurRadius="7"
                    Direction="0"
                    Opacity="0.2"
                    RenderingBias="Performance"
                    ShadowDepth="2"
                    Color="{StaticResource MaterialDesignShadow}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BlockquoteTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>